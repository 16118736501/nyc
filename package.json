{
  "name": "nyc",
  "version": "1.1.1",
  "description": "forking code-coverage using istanbul.",
  "main": "index.js",
  "scripts": {
    "test": "standard && ./bin/nyc.js ./node_modules/.bin/mocha --ui exports",
    "coverage": "./bin/nyc-report.js --reporter=text-lcov | coveralls"
  },
  "bin": {
    "nyc": "./bin/nyc.js",
    "nyc-report": "./bin/nyc-report.js"
  },
  "config": {
    "nyc": {
      "exclude": [
        "node_modules/"
      ]
    }
  },
  "keywords": [
    "coverage",
    "subprocess"
  ],
  "author": "Ben Coe <ben@npmjs.com>",
  "license": "ISC",
  "dependencies": {
    "istanbul": "https://github.com/bcoe/istanbul.git#text-lcov",
    "lodash": "^3.8.0",
    "mkdirp": "^0.5.0",
    "rimraf": "^2.3.3",
    "spawn-wrap": "0.0.0"
  },
  "devDependencies": {
    "chai": "^2.3.0",
    "coveralls": "^2.11.2",
    "mocha": "^2.2.4",
    "standard": "^3.7.3"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bcoe/nyc.git"
  }
}
